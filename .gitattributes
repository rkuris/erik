# Set default behavior to automatically normalize line endings
* text=auto

# Rust source files
*.rs text eol=lf
*.toml text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf

# Markdown and documentation
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows-specific files
*.bat text eol=crlf
*.ps1 text eol=crlf
